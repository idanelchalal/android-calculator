<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/display_background"
            android:gravity="center|end"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:textColor="@color/display_text"
            android:textSize="48sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonONE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="1"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonTWO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="2"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="2" />

        <Button
            android:id="@+id/buttonTHREE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="3"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operator_button"
            android:onClick="onOperatorButtonClick"
            android:text="X"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonFOUR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="4"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonFIVE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:gravity="center"
            android:onClick="onNumberButtonClick"
            android:text="5"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSIX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="6"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/MINUSbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operator_button"
            android:onClick="onOperatorButtonClick"
            android:text="-"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonSEVEN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="7"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEIGHT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="8"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonNINE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="9"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/PLUSbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operator_button"
            android:onClick="onOperatorButtonClick"
            android:text="+"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonZERO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:onClick="onNumberButtonClick"
            android:text="0"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DOTbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_button"
            android:text="."
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/devideButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operator_button"
            android:onClick="onOperatorButtonClick"
            android:text="/"
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equalbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/equals_button"
            android:onClick="onEqualsButtonClick"
            android:text="="
            android:textColor="@color/button_text"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>